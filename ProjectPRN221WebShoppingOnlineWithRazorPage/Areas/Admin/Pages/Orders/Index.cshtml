@page
@model ProjectPRN221WebShoppingOnlineWithRazorPage.Areas.Admin.Pages.Orders.IndexModel
@{
}
<partial name="_Notification" model=@Model.StatusMessage />

<div class="card">

    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="text-primary">Danh sách đơn hàng</h5>
    </div>

    <div class="card-body">
        <table id="DT_load" class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>CustomerName</th>
                    <th>Total</th>
                    <th>Address</th>
                    <th>PhoneNumber</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>

        </table>
    </div>
</div>

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập nhật đơn hàng</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderId" value="0" />
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" id="ddTrangThai">
                        <option value="1">Chờ xử lí</option>
                        <option value="1">Đang đóng gói</option>
                        <option value="1">Đang giao</option>
                        <option value="1">Đã thanh toán payment</option>
                        <option value="1">Từ chối thanh toán</option>
                        <option value="1">Đã thanh toán</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnLuu">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/order.js"></script>
}