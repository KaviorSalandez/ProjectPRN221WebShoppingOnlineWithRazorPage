@page "/admin/profile"
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row" style="min-height:400px">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-floating">
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.HomeAddress" class="form-label"></label>
                <textarea asp-for="Input.HomeAddress" class="form-control" ></textarea>
                <span asp-validation-for="Input.HomeAddress" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.BirthDate" class="form-label"></label>
                <input asp-for="Input.BirthDate" class="form-control" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.Avatar"></label>
                <input type="file" name="files" id="uploadBox" class="form-control" />
            </div>
            <br />
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.Input.Avatar))
        {
            <img width="100%" style="border-radius:5px;border:1px solid #bbb9b9" src="@Model.Input.Avatar" />
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
