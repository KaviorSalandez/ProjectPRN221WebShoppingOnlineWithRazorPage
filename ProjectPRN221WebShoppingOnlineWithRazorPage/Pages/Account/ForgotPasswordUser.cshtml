@page
@model ProjectPRN221WebShoppingOnlineWithRazorPage.Pages.Account.ForgotPasswordUserModel
@{
    ViewData["Title"] = "Forgot your password?";
}





<div class="container d-flex justify-content-center align-items-center vh-100 product_section_container" style="margin-top:200px">
        <div class="splash-container">
            <div class="card w-100">
                <div class="card-header text-center"><img class="logo-img"><span class="splash-description">Please enter your user information.</span></div>
                <div class="card-body">
                    <form method="post">
                        <p>Don't worry, we'll send you an email to reset your password.</p>
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="email" asp-for="Input.Email" required="" placeholder="Your Email" autocomplete="on">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-block btn-primary btn-xl">Reset Password</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <span>Don't have an account? <a href="#">Sign Up</a></span>
                </div>
            </div>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartialUser" />
}